<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/MyCard"
    android:layoutDirection="rtl"

    android:layout_marginTop="@dimen/spacing_standard"
    android:layout_height="@dimen/_70sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/border_backgroung"
            android:src="@drawable/add_icon"
            android:id="@+id/item_add_btn"
            android:contentDescription="Close"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="اسم "
            android:id="@+id/item_name_text"
            style="@style/textColor2Wite_black"
            android:layout_marginRight="@dimen/spacing_standard_new"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/item_totalCount_forhim"
                    android:textColor="@color/red"
                    android:gravity="start"
                    android:textSize="@dimen/font_size_small"
                    android:text="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:id="@+id/item_totalCount_aboyt"
                    android:textColor="#00B51E"
                    android:textSize="@dimen/font_size_small"
                    android:gravity="end"
                    android:text="0"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout

               android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/item_count_forhim"
                    android:textColor="@color/red"
                    android:gravity="start"
                    android:textSize="@dimen/font_size_normal"
                    android:text="232"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:id="@+id/item_count_aboyt"
                    android:textColor="#00B51E"
                    android:textSize="@dimen/font_size_normal"
                    android:gravity="end"
                    android:text="234"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
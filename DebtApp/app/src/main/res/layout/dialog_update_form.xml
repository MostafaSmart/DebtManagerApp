<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    style="@style/DialogBackground"
    android:padding="@dimen/spacing_standard"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="wrap_content">
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           style="@style/MyTextInputLayout"

           >

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/input_amount_number2"
               android:inputType="number"


               style="@style/textColor1Wite_black"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="المبلغ "
               tools:ignore="TouchTargetSizeCheck" />
       </com.google.android.material.textfield.TextInputLayout>


       <TextView
           android:layout_width="0dp"
           style="@style/textColor2Wite_black"

           android:layout_weight="0.5"
           android:id="@+id/textDateTime"
           android:layout_height="wrap_content"/>

   </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/MyTextInputLayout"

        >



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_amount_detels2"
            android:inputType="text"


            style="@style/textColor1Wite_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="التفاصيل"
            tools:ignore="TouchTargetSizeCheck" />





    </com.google.android.material.textfield.TextInputLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_marginVertical="@dimen/spacing_standard"
      android:layout_height="wrap_content">


      <com.google.android.material.chip.ChipGroup
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/chipPirntFor"
          app:singleSelection="true"
          android:layout_marginHorizontal="@dimen/spacing_standard"
          android:background="@drawable/border_backgroung"

          android:layout_height="wrap_content">


          <com.google.android.material.chip.Chip
              android:layout_width="wrap_content"
              android:id="@+id/chipForAAlih"
              android:text="عليه"

              app:chipStrokeWidth="2dp"
              android:layout_marginStart="@dimen/spacing_xxxlarge"

              android:checkable="true"
              android:clickable="true"
              android:textColor="@color/black"
              android:textSize="@dimen/font_size_medium"
              app:rippleColor="@color/gold"

              android:layout_height="wrap_content"/>


          <com.google.android.material.chip.Chip
              android:layout_width="wrap_content"
              android:id="@+id/chipForLLAh"
              android:text="له"
              app:chipStrokeWidth="2dp"

              app:rippleColor="@color/gold"
              android:checkable="true"
              android:clickable="true"
              android:textSize="@dimen/font_size_medium"


              android:layout_height="wrap_content"/>
      </com.google.android.material.chip.ChipGroup>


      <android.widget.Button
          android:layout_width="0dp"
          android:layout_weight="0.5"
          android:text="حفظ"
          android:background="@drawable/btn_back_black"
          android:textColor="@color/white"
          android:id="@+id/btnSaveUpdate"
          android:layout_height="wrap_content"/>

  </LinearLayout>
</LinearLayout>
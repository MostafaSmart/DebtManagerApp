<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layoutDirection="rtl"
    android:fillViewport="true"
    style="@style/backGround2"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:ignore="MissingPrefix,UnusedAttribute">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCloseDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_standard_new"
            android:layout_marginTop="@dimen/spacing_standard"

            android:padding="@dimen/spacing_control"
            android:src="@drawable/back_icon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/logo12"
             />

        <TextView
            android:id="@+id/txtDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/spacing_medium"
            android:gravity="center_horizontal"
            android:text="حسابات"

            android:textStyle="bold"
            android:textSize="@dimen/font_size_large" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_width"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/spacing_standard"
                android:background="#B6ADADAD" />

            <TextView
                android:id="@+id/tvAddCostmer"

                style="@style/SidebarLabel.SidebarOption"
                android:drawableStart="@drawable/add_icon"
                android:gravity="center_vertical"

                android:text="اضافة عميل" />


            <TextView
                android:id="@+id/tvAddAmount"
                style="@style/SidebarLabel.SidebarOption"
                android:drawableStart="@drawable/add_icon"
                android:gravity="center_vertical"
                android:text="اضافة مبلغ" />



            <TextView
                android:id="@+id/tvReports"
                style="@style/SidebarLabel.SidebarOption"
                android:drawableStart="@drawable/add_icon"
                android:gravity="center_vertical"
                android:text="تقارير" />

            <TextView
                android:id="@+id/tvBest"
                style="@style/SidebarLabel.SidebarOption"
                android:drawableStart="@drawable/add_icon"
                android:gravity="center_vertical"
                android:text="نسخ احتياطي" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_width"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/spacing_standard_new"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/spacing_standard"
                android:background="#B6ADADAD" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>

